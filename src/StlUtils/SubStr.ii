inline
SubStr::SubStr( Str & src, size_type start, size_type length )
  : str( src ),
    constStr( src ),
    pos( start ),
    len( min( src.size() - start, length ) )
{
}

inline
SubStr::SubStr( const Str & src, size_type start, size_type length )
