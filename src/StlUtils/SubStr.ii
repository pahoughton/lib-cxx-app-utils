inline
SubStr::size_type
SubStr::copy( char * dest, size_type destLen, size_type start ) const
{
  size_type copyLen = (destLen == npos ? size() - start :
		       min( destLen, size() - start ) );
  
  strncpy( dest, strbase() + start, copyLen );
  if( destLen == npos || copyLen < destLen )
    dest[ copyLen ] = 0;
  return( copyLen );
}
  
