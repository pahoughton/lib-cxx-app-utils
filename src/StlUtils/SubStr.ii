inline
ostream &
operator << ( ostream & dest, const SubStr & src )
{
  return( src.toStream( dest ) );
}

inline
istream &
operator >> ( istream & src, SubStr & dest )
{
  Str tmp( src );
  if( src.good() )
    dest = tmp;
  return( src );
}

