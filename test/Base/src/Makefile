# 
# =USE_CURRENT_MAKEFILE=
# When you re-gen a make file, every thing between 
# these tags will be kept int the new makefile
# if you want it re-gen'd, just delete the tags
#

# *****  D E F I N E S  *****
#
# see MakeConfig(1) for portable library defines
#

DEFINES		= -DCLUE_DEBUG=1 $(ARCH_DEFINES)

ifeq ($(arch),AIX)
ARCH_DEFINES	= 
endif

# *****  I N C L U D E S *****
#
# see MakeConfig(1) for portable library includes
#


SRCINCDIR	= -I.
PRJINCDIR	= -I../src \
		  -I../arch/$(arch)/src \
		  -I../arch/$(arch)/stdc++ \
		  -I../arch/Unix/src \


INCDIRS		= $(SRCINCDIR)	\
		  $(PRJINCDIR)


# **** C O M P I L E / C P P ****

CPPOTHER 	= 
CCDEBUG		= -g
CCOTHER		=

INSTALL_BIN_FLAGS   = -m 775

# ***** L I B R A R I E S *****
#
# see MakeConfig(1) for portable libraries
#

LDLIBS		= -L../src -lClue -lm

ifeq ($(arch),Linux)
ARCH_LIBS = -lstdc++
endif


# ***** D E P E N D A N C I E S *****

# =USE_CURRENT_MAKEFILE=

all: $(PROGRAM)

tst: tst.o
	$(LDXX) -o tst tst.o $(LDFLAGS) $(ARCH_LIBS)

$(PROGRAM): $(OBJECTS) ../src/libClue.a
	$(LDXX) -o $@ $(OBJECTS) $(LDFLAGS) $(ARCH_LIBS)

# $(LIBXXARCH) -lm 

install:
	mkdirhier $(BETA_DIR/old)
	-( cd $(BETA_DIR)/old; rm -f $(PROGRAM); cd ..; mv $(PROGRAM) old )
	$(INSTALL) $(INSTALL_BIN_FLAGS) $(PROGRAM) $(BETA_DIR)
	echo 'Beta Install Complete!'

install_production:
	mkdirhier $(PROD_DIR/old)
	-( cd $(PROD_DIR)/old; rm -f $(PROGRAM); cd ..; mv $(PROGRAM) old )
	$(INSTALL) $(INSTALL_BIN_FLAGS) $(PROGRAM) $(PROD_DIR)
	echo 'Production Install Complete!'

clean:
	rm -f $(PROGRAM) $(OBJECTS) core

realclean:
	rm -f $(PROGRAM) $(OBJECTS) .depend.prog TAGS $(PROTO_H) core

test:	all

depend: depend.prog

proto: $(PROTO_H)

$(PROTO_H): $(C_SOURCES)
	$(MKPROTO) $(CPPFLAGS) $(C_SOURCES) >$@

tags: 
	etags -t *.h *.c *.hh *.C

#
# include dependancies generated by 'make depend'
#
include .depend.prog

